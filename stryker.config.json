{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "yarn",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.cjs"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "packages/core/src/**/*.ts",
    "packages/cidr-utils/src/**/*.ts",
    "!packages/*/src/**/*.d.ts",
    "!packages/*/src/**/index.ts"
  ],
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "packages/docs",
    "packages/cli"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 60000,
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true
}


